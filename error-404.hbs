{{!--
This error template is used for all 404 errors, which might occur on your site.
It's a good idea to keep this template as minimal as possible in terms of both file size and complexity.
--}}

{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<header class="site-header">
    {{> site-header}}
</header>

<main id="site-main" class="site-main outer error-content">
    <div class="inner">
        <section class="error-message">
            <h1 class="error-code">{{statusCode}}</h1>
            {{#if @site.logo}}
            <a style:"text-align:center;" href="{{@site.url}}"><img src="{{img_url @site.logo size="xs"}}"
                    alt="{{@site.title}}" /></a>
            {{else}}
            <a class="site-nav-logo" href="{{@site.url}}">{{@site.title}}</a>
            {{/if}}
            <p class="error-description">Pagina non trovata</p>
            <a class="error-link" href="{{@site.url}}">Vai alla pagina principale â†’</a>
        </section>

        {{#get "posts" limit="3" include="authors,tags"}}
            <div class="post-feed">
                {{#foreach posts}}
                {{> "post-card"}}
                {{/foreach}}
            </div>
        {{/get}}
    </div>
</main>
